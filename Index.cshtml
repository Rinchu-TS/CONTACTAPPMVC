@model IList<CONTACTAPPMVC.Models.contactViewModel>

@{ ViewBag.Title = "Index";}
<h2></h2>
@using (Html.BeginForm("ExportToExcel","Home",FormMethod.Post))
            {
                <br/>
                <br/>
                <h1>
                    <b><font color="blue">Export Data To Excel</font></b>
                </h1>
                <br/>
                <table style="background-color:wheat; width: 100%;">
                    <tr>
                        <th style="border: 2px solid black;text-align:center;width:20%">
                            Email
                        </th>
                        <th style="border: 2px solid black;text-align:center;width:20%">
                            First Name
                        </th>
                        <th style="border: 2px solid black;text-align:center;width:20%">
                            Last Name
                        </th>
                        <th style="border: 2px solid black;text-align:center;width:20%">
                            Dial Code
                        </th>
                        <th style="border: 2px solid black;text-align:center;width:20%">
                            Number
                        </th>
                        <th style="border: 2px solid black;text-align:center;width:20%">
                            Address
                        </th>
                    </tr>
                    @if (Model!=null)
                    {
                        foreach(var item in Model)
                    {
                <tr>
                    <td style="border:2px solid red;padding-left:20px;">
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td style="border:2px solid red;padding-left:20px;">
                        @Html.DisplayFor(m => item.FirstName)
                    </td>
                    <td style="border:2px solid red;padding-left:20px;">
                        @Html.DisplayFor(m => item.LastName)
                    </td>
                    <td style="border:2px solid red;padding-left:20px;">
                        @Html.DisplayFor(m => item.DialCode)
                    </td>
                    <td style="border:2px solid red;padding-left:20px;">
                        @Html.DisplayFor(m => item.Number)
                    </td>
                    <td style="border:2px solid red;padding-left:20px;">
                        @Html.DisplayFor(m => item.Address)
                    </td>
                </tr>
                    }                    }
                    <tr>
                        <td style="text-align:left";colspan="6">
                            <br/>
                            <br/>
                            <input type="submit" value="Export to Excel" class="btn btn-primary"/>
                        </td>
                    </tr>
                </table>           }
                  